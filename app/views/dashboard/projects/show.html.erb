<div class="w-1/2 mx-auto">
  <div class="text-lg font-bold mb-10">
    <%= link_to "Back to projects", dashboard_projects_path, class: "underline" %>
  </div>
  <div class="border p-10">
    <div class="text-lg font-bold mb-10">Project info</div>
    <ul>
      <li>Name: <%= deal.name %></li>
      <li>Related quotes:
        <% quotes.each do |quote| %>
          <%= link_to quote.reference, quote.download_url, target: :_blank, class: "underline" %>
            <% end %>
      </li>
      <li>Related invoices:
        <% invoices.each do |invoice| %>
          <%= link_to invoice[:invoice_number], invoice[:file_url], target: :_blank, class: "underline" %>
            <% end %>
      </li>
      <% [:file1, :file2].each do |attr| %>
        <li>
          <%= attr %>:
            <% contact.send(attr).each do |file| %>
              <%= link_to file.name, file.url, target: :_blank, class: "underline" %>,
                <% end %>
        </li>
        <% end %>

          <% [:impot_file, :mairie_file, :contract_file].each do |attr| %>
            <li>
              <%= attr %>:
                <% deal.send(attr).each do |file| %>
                  <%= link_to file.name, file.url, target: :_blank, class: "underline" %>,
                    <% end %>
            </li>
            <% end %>
    </ul>
  </div>
  <div class="mt-10 border p-10">
    <div class="text-lg font-bold mb-10">Upload file to related deal</div>
    <%= form_with scope: :project, url: dashboard_project_path(deal.id), method: :put do |f| %>
      <div class="mb-6">
        <%= f.label :impot_file %>
        <%= f.file_field :impot_file %>
      </div>
      <div class="mb-6">
        <%= f.label :mairie_file %>
        <%= f.file_field :mairie_file %>
      </div>
      <div class="mb-6">
        <%= f.label :contract_file %>
        <%= f.file_field :contract_file %>
      </div>

      <%= f.submit class: "btn btn-blue" %>
    <% end %>
  </div>
</div>
